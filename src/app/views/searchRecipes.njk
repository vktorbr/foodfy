{% extends "layoutClient.njk" %}

{% block content %}
<section class="most_accessed">
    <div class="most_accessed_title">
        <h1>Buscando por "{{filter}}"</h1>
    </div>
    <div class="recipes">
        {% for recipe in recipes %}
        <a href="/recipes/{{recipe.id}}" class="recipe_link">
            <article class="recipe">
                <div class="recipe_image">
                    <img src="{{recipe.image}}" alt="Imagem de {{recipe.title}}">
                </div>
                <div class="recipe_title">
                    <h1>{{recipe.title}}</h1>
                </div>
                <div class="recipe_author">
                    <p>por {{recipe.chef_name}}</p>
                </div>
            </article>
        </a>
        {% endfor %}            
    </div>
    <div class="pagination"
        data-page={{pagination.page}}
        data-total={{pagination.total}}
    ></div>
</section>
{% endblock content %}