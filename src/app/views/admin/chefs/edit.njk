{% extends 'layout.njk' %}

{% block content %}
<div id="editForm">
    <h1>Editando chef</h1>
    <form class="form-delete" action="/admin/chefs?_method=delete" method="post">
        <button type="submit">Deletar</button>
        <input type="hidden" name="id" value="{{ chef.id }}">
    </form>
    <form class="form-edit" action="/admin/chefs?_method=put" method="post">
        <button type="submit">Salvar chef</button>
        <input type="hidden" name="id" value="{{ chef.id }}">
        {% include 'admin/chefs/fields.njk' %}
    </form>
</div>
{% endblock content %}