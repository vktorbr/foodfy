{% extends 'layout.njk' %}
{% block content %}
<section class="start" id="detailsRecipe">
    <div class="formHeader">
        <h1>Chef: {{ chef.name }}</h1>
        <a href="/admin/chefs/{{ chef.id }}/edit">Editar chef</a>
    </div>
    <div class="image_chef">
        <img src="{{chef.avatar_url}}" alt="Imagem de {{chef.name}}">
    </div>
    <div class="chef_name">
        {{chef.name}}
    </div>
    <div class="chef_total">
        {{chef.total}} receitas
    </div>
</section>
<div id="table-container-chef">
    <div class="formHeader">
        <h1>Receitas</h1>
    </div>
    
    <div id="container-recipes">
        {% for recipe in recipes %}
        <div class="recipe-index">
            <div class="recipe-index-image">
                <img src="{{ recipe.image }}" alt="">
            </div>
            <div class="recipe-index-content">
                <div class="recipe-index-title">{{ recipe.title }}</div>
                <div class="recipe-index-author">por {{ recipe.chef_name }}</div>
                <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
<section id="detailsRecipeAdmin">
    
    
    
</section>
{% endblock content %}