{% extends 'layout.njk' %}

{% block content %}
<div id="table-container">
    <div class="formHeader">
        <h1>Gerenciar chefs</h1>
        <a href="/admin/chefs/create">Novo chef</a>
    </div>
    
    <div id="container-chefs">
        {% for chef in chefs %}
        <div class="chef-index">
            <div class="chef-index-image">
                <img src="{{ chef.avatar_url }}" alt="">
            </div>
            <div class="chef-index-content">
                <div class="chef-index-name">{{ chef.name }}</div>
                <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock content %}